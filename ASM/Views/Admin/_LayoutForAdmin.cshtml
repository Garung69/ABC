<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.Title - ASM2</title>
    @Styles.Render("~/Content/css")
    @{        
        var a = "ab";
        if (TempData["UN"] != null)
        {
            a = TempData["UN"].ToString();
        }

        TempData["UN"] = a;

    }
</head>
    <body style="padding-top: 0 !important; background-image: url(https://premierpaintroller.com/wp-content/uploads/2018/06/50-Beautiful-and-Minimalist-Presentation-Backgrounds-03.jpg)">
