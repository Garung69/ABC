
@{
    ViewBag.Title = "AdminCreateStaff";
    Layout = "~/Views/Staff/_LayoutFor Staff.cshtml";
}
@model ASM.Models.UserInfor

<div class="row-cols-sm-1">
    <div class="row-cols-sm-1" style="height: 700px;">
        <div class="form-input">
            <h1 class="title" style="width: 55%; padding: 3%;">Add Staff</h1>
            @using (Html.BeginForm(FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "font-weight-bold" })

                    @Html.EditorFor(m => m.Email,
                     new
                     {
                       htmlAttributes = new { @class = "form-control" }
                     })
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">
                        Password
                    </label> <br />

                    @Html.PasswordFor(m => m.PasswordHash,
                    new
                    {
                      htmlAttributes = new { @class = "form-control" }
                    })
                </div>
                <button type="submit" class="btn btn-success">Save</button>
            }
        </div>
        <div class="message">

        </div>
    </div>
</div>






