@model ASM.Models.UserInfor
@{
    Layout = "~/Views/Admin/_LayoutForAdmin.cshtml";
    TempData["UN"] = TempData["UN"];
}

<div class="manage">
    <img src="https://png.pngtree.com/png-vector/20190411/ourlarge/pngtree-business-male-icon-vector-png-image_916468.jpg" alt="Alternate Text" width="70%" height="auto" /> <br />
    <a class="btn btn-success" href="@Url.Action("DStaff", new {id = TempData["StaffId"]})" role="button">Go Back</a> <br />
</div>
<div class="show-info">
    <span class="title" style="margin: 5px 20%;">Change Staff Infomation</span>
    <div class="message" style="float: none; padding: 0 15%; width: 100%;">
        @if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(false, "Oops! something went wrong 😣", new { @class = "text-danger" });
        }
    </div>
    <div class="info" style="margin-top: 5px;">

        @using (Html.BeginForm(FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "font-weight-bold" })

                @Html.EditorFor(m => m.Email,
                 new
                 {
                   htmlAttributes = new { @class = "form-control" }
                 })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "font-weight-bold" })

                @Html.EditorFor(m => m.Name,
                 new
                 {
                   htmlAttributes = new { @class = "form-control" }
                 })
            </div>


            <button type="submit" class="btn btn-success">Save</button>
        }
    </div>

</div>






<style>

    .search {
        float: right;
    }

    .info {
        margin: 50px 20px;
        padding: 5% 20%;
    }

    .show-info {
        border: 1px solid #4a4b42;
        background-color: ivory;
        float: right;
        width: 55%;
        height: 400px;
    }

    .manage {
        width: 30%;
        height: 500px;
        float: left;
        text-align: center;
        padding: 3%;
    }

        .manage a {
            margin: 5px auto;
        }


    .message {
        width: 45%;
        height: auto;
        padding: 20px;
        float: right;
    }

    .form-input {
        float: left;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        width: 50%;
        height: auto;
        padding: 4%;
        background-color: #d9bde8;
    }

    .title {
        font-size: 30px;
        color: #6057f6;
        margin-top: 5px;
        width: 20%;
    }

    .grid-view {
        margin: 20px auto;
        border: 1px solid #dee2e6;
        padding: 2%;
        float: left;
    }
</style>