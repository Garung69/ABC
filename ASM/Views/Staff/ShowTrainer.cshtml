
@{
    ViewBag.Title = "ShowTrainee";
    Layout = "~/Views/Staff/_LayoutFor Staff.cshtml";
    TempData["user"] = TempData["user"];
}
@model IEnumerable<ASM.Models.UserInRole>
<div class="container">
    <div class="title">
        <h1 class="display-4" style="margin-left:500px; padding-top:50px">All Trainer</h1>
    </div>
    @if (TempData["message"] != null)
    {
        ViewBag.Message = TempData["message"];
    }

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Type)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.WorkingPlace)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Phone)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => c.Name)</td>
                    <td>@Html.DisplayFor(model => c.Type)</td>
                    <td>@Html.DisplayFor(model => c.WorkingPlace)</td>
                    <td>@Html.DisplayFor(model => c.Phone)</td>
                    <td>@Html.DisplayFor(model => c.Email)</td>

                    <td>
                        <a type="button" class="btn btn-success btn-sm"
                           href="@Url.Action("EditTrainer", new {id = c.UserId})">ASSIGN</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

