@model ASM.Models.CourseEntity
@{
    ViewBag.Title = "AddCourse";
    Layout = "~/Views/Staff/_LayoutFor Staff.cshtml";
    TempData["user"] = TempData["user"];
}
<div class="container">
    <h1 class="display-4">New Course</h1>
    @if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "Error Summary", new { @class = "text-danger" })
    }
    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.CategoryId, htmlAttributes: new { @class = "form-weight-bold" })
            @Html.DropDownListFor(m => m.CategoryId, (IEnumerable<SelectListItem>)ViewBag.Class, htmlAttributes
           : new { @class = "form-control" }
           )
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.trainerId, htmlAttributes: new { @class = "form-weight-bold" })
            @Html.DropDownListFor(m => m.trainerId, (IEnumerable<SelectListItem>)ViewBag.trainer, htmlAttributes
           : new { @class = "form-control" }
           )
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name,
              htmlAttributes: new { @class = "font-weight-bold" })


            @Html.EditorFor(m => m.Name,
             new
             {
               htmlAttributes = new { @class = "form-control" }
             })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "font-weight-bold" })
            @Html.EditorFor(m => m.Description,
            new
            {
              htmlAttributes = new { @class = "form-control" }
            })
        </div>
        <br />
        <button type="submit" class="btn btn-dark">Submit</button>
    }

</div>


