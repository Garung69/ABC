<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @{
        var a = "ab";
        if (TempData["user"] != null)
        {
            a = TempData["user"].ToString();
        }
        else
        {
            a = ViewBag.UN;
        }

        TempData["user"] = a;
    }

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href="#"><img src="https://scontent.fhan4-2.fna.fbcdn.net/v/t1.6435-9/137642199_3456444204454631_7760562503268940717_n.jpg?_nc_cat=1&ccb=1-5&_nc_sid=09cbfe&_nc_ohc=ZCu4jF-hJXEAX_Dgc0j&tn=yfUWPwujf0jOTasY&_nc_ht=scontent.fhan4-2.fna&oh=37d5be41de97950a7cb461de473a4595&oe=618DCAAD" alt="HTML tutorial" style="width:65px;height:65px;"></a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("ShowCourse", "Staff")">Home</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Trainee
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("CreateTrainee", "Staff")">New Trainee</a>
                        <a class="dropdown-item" href="@Url.Action("ShowTrainee", "Staff")"> Manager Trainee</a>
                        <div class="dropdown-divider"></div>

                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Trainer
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("ShowTrainer", "Staff")"> Manager Trainer</a>
                        <div class="dropdown-divider"></div>

                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Course
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("AddCourse", "Staff")">New Course</a>
                        <a class="dropdown-item" href="@Url.Action("SearchCourse", "Staff")"> Manager Course</a>
                        <div class="dropdown-divider"></div>

                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Course Category
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("CreateCategory", "Staff")">New Category</a>
                        <a class="dropdown-item" href="@Url.Action("SearchCategory", "Staff")"> Manager Category</a>
                        <div class="dropdown-divider"></div>

                    </div>
                </li>

            </ul>

            <p>
                &nbsp; &nbsp;
            </p>
            <p class="nav-item" style="padding-top: 2% ; padding-right: 1%;">Staff: @a</p>
            <a class="btn btn-danger float-right navbar-right" href="@Url.Action("Logout", "Login")" role="button">Logout</a>
        </div>
    </nav>

    <div class="container">
        @{ if (TempData["alert"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Attention:</strong> @TempData["alert"]!
                    <button style="float: right; border-radius: 90px;" type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }
    </div>

    <div>
        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
    <div role="alertdialog">
        @RenderSection("alertdialog", required: false)
    </div>
</body>

</html>
