@model ASM.Models.CourseEntity
@{
    ViewBag.Title = "EditCourse";
    Layout = "~/Views/Staff/_LayoutFor Staff.cshtml";
    TempData["user"] = TempData["user"];
}

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id, htmlAttributes: new { @class = "form-weight-bold" })
        @Html.DropDownListFor(m => m.Id, (IEnumerable<SelectListItem>)ViewBag.Class, htmlAttributes
       : new { @class = "form-control" }
       )
    </div>
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Name,
          htmlAttributes: new { @class = "font-weight-bold" })


        @Html.EditorFor(m => m.Name,
         new
         {
           htmlAttributes = new { @class = "form-control" }
         })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "font-weight-bold" })
        @Html.EditorFor(m => m.Description,
        new
        {
          htmlAttributes = new { @class = "form-control" }
        })
    </div>
    <br />

    <button type="submit" class="btn btn-dark">Submit</button>
}





