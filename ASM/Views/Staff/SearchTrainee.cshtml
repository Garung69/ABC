@model IEnumerable<ASM.Models.UserInfor>
@{
    ViewBag.Title = "ShowTrainee";
    Layout = "~/Views/Staff/_LayoutFor Staff.cshtml";
   
}
<br />
<br />

<div class="row-cols-sm-1">
    <div class="title">
        <span class="title font-weight-bold">All Trainee</span>
    </div>
    <div class="mb-5">
        @using (Html.BeginForm("SearchTrainee", "Staff", FormMethod.Get))
        {
            //the following are search options
            @Html.RadioButton("option", "Name") <b class="mr-4">Name</b>
            @Html.RadioButton("option", "ProgrammingLanguage")<b class="mr-4"> Programming Language</b>
            @Html.RadioButton("option", "TOEIC")<b class="mr-4"> TOEIC Score</b>

            @Html.TextBox("search") <input type="submit" name="submit" value="Search" />
        }
    </div>

    <div class="row-cols-md-1">
        <table class="table">
            <thead>
                <tr style="border: 1px solid #8b46be;">
                    <th scope="col">NO</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Toeic)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.ProgrammingLanguage)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Age)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.DoB)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Experience)</th>
                    <th scope="col"></th>
                    <th scope="col">Action</th>

                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                <tr style="border: 1px solid #8b46be;">
                    <td>@Html.DisplayFor(model => c.Name)</td>
                    <td>@Html.DisplayFor(model => c.Email)</td>
                    <td>@Html.DisplayFor(model => c.Toeic)</td>
                    <td>@Html.DisplayFor(model => c.ProgrammingLanguage)</td>
                    <td>@Html.DisplayFor(model => c.Age)</td>
                    <td>@Html.DisplayFor(model => c.DoB)</td>
                    <td>@Html.DisplayFor(model => c.Experience)</td>
                    <td>@Html.HiddenFor(model => c.Id)</td>
                    <td><a class="btn btn-primary" href="@Url.Action("Details", new {id = c.Id})" role="button">ViewMore</a></td>


                </tr>
                }

            </tbody>
        </table>
    </div>
</div>

